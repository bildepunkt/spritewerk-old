{
  "name": "spritewerk",
  "version": "0.1.0",
  "description": "A set of generic classes with which to build a lightweight, device-agnostic, game development project",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/c-concat-p/spritewerk.git"
  },
  "bugs": {
    "url": "https://github.com/c-concat-p/spritewerk/issues"
  },
  "watch": {
    "copy": "src/*.js"
  },
  "scripts": {
    "xpile": "./node_modules/.bin/babel ./src --out-dir ./build",
    "clean": "rm -rf ./playground/src ./build && mkdir ./playground/src ./build",
    "copy": "cp -r ./src ./playground",
    "doc": "./node_modules/.bin/jsdoc ./src/* -c ./jsdoc.conf.json -d ./docs -R README.md -t ./node_modules/ink-docstrap/template",
    "test-cov": "./node_modules/.bin/istanbul cover ./node_modules/.bin/jasmine-node --verbose --color ./spec",
    "test ": "./node_modules/.bin/jasmine-node --verbose --color ./spec",
    "build": "npm run xpile && ./node_modules/.bin/istanbul cover ./node_modules/.bin/jasmine-node --verbose --color ./spec/ && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "watch": "./node_modules/.bin/npm-watch"
  },
  "keywords": [
    "canvas",
    "html5",
    "javascript",
    "game",
    "library",
    "framework"
  ],
  "author": "Chris Peters",
  "license": "ISC",
  "dependencies": {
    "npm-watch": "0.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-preset-es2015": "^6.3.13",
    "coveralls": "^2.11.6",
    "ink-docstrap": "^1.1.1",
    "istanbul": "^0.4.2",
    "jasmine-node": "1.14.5",
    "jsdoc": "^3.4.0",
    "jsdom": "7.2.2"
  }
}
